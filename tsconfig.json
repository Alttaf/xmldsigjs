{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es5",
            "dom",
            "es2015.promise"
        ],
        "rootDir": "src",
        "outDir": "lib",
        "noImplicitAny": false,
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "declaration": false,
        "declarationDir": "types",
        "strictNullChecks": true,
        "pretty": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules"
    ]
}
